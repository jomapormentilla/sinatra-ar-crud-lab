<h1>Edit Article</h1>

<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<form action="/articles/<%= @article.id %>" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= @article.title %>" />

    <br>
    <label for="content">Content</label>
    <textarea type="text" id="content" name="content" style="width: 500px; height: 300px;"><%= @article.content %></textarea>

    <br>
    <input type="hidden" name="_method" value="patch">
    <input type="submit" id="Submit" value="Edit Article" />
</form>